#!/usr/bin/env ruby

# A few helpful tips about the Rules file:
#
# * The order of rules is important: for each item, only the first matching
#	 rule is applied.
#
# * Item identifiers start and end with a slash (e.g. “/about/” for the file
#	 “content/about.html”). To select all children, grandchildren, … of an
#	 item, use the pattern “/about/*/”; “/about/*” will also select the parent,
#	 because “*” matches zero or more characters.
debug = true

# Static content (simply copied into output) {{{
compile '/static/css/*/' do
	# compress CSS :)
	filter :rainpress
end

compile '/static/*/' do
	# don't compile
end

route '/static/*/' do
	path = @item.identifier.chop.gsub(/^\/static/, '')
	path + '.' + @item[:extension]
end
# }}}

# Compiling blog posts {{{
compile '/posts/' do
	filter :erb
	layout 'default'
end

compile '/posts/*/' do
    if debug or @item[:status] == 'published' then
	layout 'post'
	filter :redcloth, :hard_breaks => false
	filter :colorize_syntax,
	       :default_colorizer => :pygmentize
	layout 'default'
	end
end

compile '/posts/*/', :rep => :alt_url do
    if debug or @item[:status] == 'published' then
	@item[:source_url] = @item.identifier.chop + '/index.html'
	layout 'redirect'
	end
end

route '/posts/*/' do
    if debug or @item[:status] == 'published' then
		parts = @item.name.split('-', 4)
		if @item[:created_at]
			'/posts/' + @item[:created_at].year().to_s + '/' + parts[3] + '/index.html'
		else
			puts "Skipping " + @item.name
		end
	end
end

route '/posts/*/', :rep => :alt_url do
    if debug or @item[:status] == 'published' then
		@item[:alt_url]
	end
end
# }}}

# Blog post imagery {{{
compile '/img/*/' do
	# make images fit the blog's size
	filter :thumbnailize, :width => 520
	#if item[:extension] == "png"
	#	filter :pngcrush, :level => 7
	#end
end

route '/img/*/' do
	@item.identifier.chop + '.' + @item[:extension]
end
# }}}

# Home page {{{
compile '/' do
	filter :erb
	filter :redcloth, :hard_breaks => false
	filter :colorize_syntax,
	       :default_colorizer => :pygmentize
	layout 'default'
end
# }}}

# About me {{{
compile '/about/' do
	filter :kramdown
	layout 'default'
end
# }}}

compile '*' do
	filter :erb
	layout 'default'
end

route '*' do
	@item.identifier + 'index.html'
end

layout '*', :erb
