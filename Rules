#!/usr/bin/env ruby

# A few helpful tips about the Rules file:
#
# * The order of rules is important: for each item, only the first matching
#	 rule is applied.
#
# * Item identifiers start and end with a slash (e.g. “/about/” for the file
#	 “content/about.html”). To select all children, grandchildren, … of an
#	 item, use the pattern “/about/*/”; “/about/*” will also select the parent,
#	 because “*” matches zero or more characters.

compile '/about/' do
	filter :kramdown
	layout 'default'
end

compile '/stylesheet/' do
	# don’t filter or layout
end

compile '/iphone/' do
	# don’t filter or layout
end

compile '/fontface/' do
	# don’t filter or layout
end

compile '/images/*/' do
	# don't compile
end

compile '/fonts/*/' do
	# don't compile
end

compile '/' do
	filter :kramdown
	layout 'default'
end

compile '*' do
	if item[:extension] == 'png' or item[:extension] == 'otf'
	   	# do nothing
	else
		filter :erb
		layout 'default'
	end
end

route '/stylesheet/' do
	'/style.css'
end

route '/iphone/' do
	'/iphone.css'
end

route '/fontface/' do
	'/fontface.css'
end

route '/images/*/' do
	item.identifier.chop + '.' + item[:extension]
end

route '/fonts/*/' do
	item.identifier.chop + '.' + item[:extension]
end

route '*' do
	item.identifier + 'index.html'
end

layout '*', :erb
